<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.jason.golf.MainActivity$PlaceholderFragment" >

        <LinearLayout
            android:id="@+id/account_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible" >

            <Button
                android:id="@+id/account_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/login" />

            <Button
                android:id="@+id/account_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/register" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/block_background"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="5dip" >

                <ImageView
                    android:id="@+id/account_vip"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_vip_gold" />

                <TextView
                    android:id="@+id/account_phone"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="18653157590" 
                    android:drawableRight="@drawable/ic_37_triange"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/block_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:orientation="horizontal"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" >

                <TextView
                    android:id="@+id/account_balance"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_37_triange"
                    android:gravity="center"
                    android:text="余额：10000" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="3dip"
                    android:background="#c7c7cc" />

                <TextView
                    android:id="@+id/account_points"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_37_triange"
                    android:gravity="center"
                    android:text="积分：10000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/block_background"
            android:orientation="vertical"
            android:padding="1dip" >

            <!--
            <TextView
                style="@style/AccountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_to_pay" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/block_divider" />
            -->

            <TextView
                android:id="@+id/account_order"
                style="@style/AccountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_item_background"
                android:text="@string/order_manager" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/block_background"
            android:orientation="vertical"
            android:padding="1dip" >

            <TextView
                android:id="@+id/account_recharge"
                style="@style/AccountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_item_background"
                android:text="@string/account_recharge" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/block_divider" />

            <TextView
                android:id="@+id/account_trans_details"
                style="@style/AccountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_item_background"
                android:text="@string/consumption_details" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/block_background"
            android:orientation="vertical"
            android:padding="1dip" >

            <TextView
                android:id="@+id/account_change_pwd"
                style="@style/AccountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_item_background"
                android:text="@string/account_changepwd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/block_background"
            android:orientation="vertical"
            android:padding="1dip" >

            <TextView
                android:id="@+id/account_my_flea"
                style="@style/AccountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_item_background"
                android:text="@string/account_my_flea" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/block_background"
            android:orientation="vertical"
            android:padding="1dip" >

            <TextView
                android:id="@+id/account_my_score"
                style="@style/AccountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_item_background"
                android:text="@string/account_my_score" />
        </LinearLayout>

        <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:padding="1dip"
            android:background="@drawable/block_background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/account_court_estimate"
                style="@style/AccountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_my_estimate" 
                android:background="@drawable/account_item_background"/>
        </LinearLayout>
        -->

        <Button
            android:id="@+id/account_logout"
            style="@style/OrangeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:text="@string/account_logout" />
    </LinearLayout>

</ScrollView>