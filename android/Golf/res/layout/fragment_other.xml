<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.jsaon.golf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dip" >

        <android.support.v4.view.ViewPager
            android:id="@+id/advertisements"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/dotcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttons1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/grid_preferential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="#00a0ea"
            android:gravity="center"
            android:text="@string/preferential"
            android:textColor="@android:color/white"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/grid_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="#8587c0"
            android:gravity="center"
            android:text="@string/combo"
            android:textColor="@android:color/white"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/grid_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="#2454a6"
            android:gravity="center"
            android:text="@string/sale"
            android:textColor="@android:color/white"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/grid_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:background="#0ba29b"
            android:gravity="center"
            android:text="@string/ranking"
            android:textColor="@android:color/white"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/grid_competition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="#EEDC82"
            android:gravity="center"
            android:text="@string/competition"
            android:textColor="@android:color/white"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/grid_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="#EEDC82"
            android:gravity="center"
            android:text="@string/merchant"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:textSize="27sp" />
    </LinearLayout>

</LinearLayout>