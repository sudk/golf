<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/basecolor</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="OrangeButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RectangleOrangeButton">
        <item name="android:background">@drawable/button_rectangle_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogOrderOrangeButton">
        <item name="android:background">@drawable/dialog_order_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogOrderBlueButton">
        <item name="android:background">@drawable/dialog_blue_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WhiteButton">
        <item name="android:background">@drawable/small_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SearchCourtText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/titlecolor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dip</item>
    </style>

    <style name="SearchCourtEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#237fca</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_margin">3dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:drawableRight">@drawable/ic_37_triange</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="FleeInfoTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/titlecolor</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_weight">3</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:layout_marginLeft">3dip</item>
    </style>

    <style name="FleeInfoEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">3dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">7</item>
    </style>

    <style name="MerchantInfoTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/titlecolor</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_weight">3</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:layout_marginLeft">3dip</item>
    </style>

    <style name="MerchantInfoEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">3dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">8</item>
    </style>

    <style name="AccountTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:drawableRight">@drawable/ic_37_triange</item>
        <item name="android:padding">8dip</item>
    </style>

    <style name="AccountLoginTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">5dip</item>
    </style>

    <style name="AccountLoginEditText">
        <item name="android:background">@null</item>
        <item name="android:ems">10</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AccountRegisterTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">5dip</item>
    </style>

    <style name="CourtDetailTitle">
        <item name="android:gravity">right</item>
        <item name="android:textColor">#7c7c7c</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CourtDetailContent">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">1dip</item>
    </style>

    <style name="OrderDetailTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:padding">1dip</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="OrderDetailContent">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:padding">1dip</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CompetitionDetailTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:padding">1dip</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CompetitionDetailContent">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:padding">1dip</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CourtDetailLinearLayout">
        <item name="android:layout_margin">3dip</item>
    </style>

    <style name="OrderDialog" parent="@android:style/Theme.Holo.Dialog">

        <!--
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>//无标题  
        <item name="android:windowBackground">@null</item>//背景  
        <item name="android:windowIsFloating">true</item>//悬浮  
        <item name="android:windowContentOverlay">@null</item>
        -->
        <item name="android:windowNoTitle">true</item>
    </style>
    
     <style name="GProgressDialog" parent="@android:style/Theme.Holo.Dialog">
         <item name="android:windowFrame">@null</item>
         <item name="android:windowNoTitle">true</item> <!-- //无标题 -->
         <item name="android:windowBackground">@null</item> <!-- //背景 -->
         <item name="android:windowIsFloating">true</item> <!-- //悬浮 -->
         <item name="android:windowContentOverlay">@null</item>
         <item name="android:windowNoTitle">true</item>
     </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>