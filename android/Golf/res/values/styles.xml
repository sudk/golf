<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/basecolor</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="OrangeButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="WhiteButton">
        <item name="android:background">@drawable/small_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SearchCourtText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#008</item>
        <item name="android:layout_margin">3dip</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">20dip</item>
    </style>

    <style name="SearchCourtEditText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#237fca</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_margin">3dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:drawableRight">@drawable/ic_37_triange</item>
    </style>

    <style name="AccountTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:drawableRight">@drawable/ic_37_triange</item>
        <item name="android:padding">8dip</item>
    </style>

    <style name="AccountLoginTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">5dip</item>
    </style>

    <style name="AccountLoginEditText">
        <item name="android:background">@null</item>
        <item name="android:ems">10</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AccountRegisterTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">5dip</item>
    </style>

</resources>