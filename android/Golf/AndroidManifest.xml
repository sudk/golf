<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jsaon.golf"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:name="com.jason.golf.GolfAppliaction"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.jason.golf.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ###################本地数据库###################### -->
        <provider
            android:name="com.jason.golf.provider.GolfProvider"
            android:authorities="com.jason.golf.provider" >
        </provider>
        <activity android:name="com.jason.golf.SelectCityActivity"></activity>
        <activity android:name="com.jason.golf.GCourtListActivity"></activity>
        <activity android:name="com.jason.golf.GAccountActivity"></activity>
        <activity android:name="com.jason.golf.GCourtInfoActivity"></activity>
        <activity android:name="com.jason.golf.GChangePwdActivity"></activity>
        
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>